{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ruqayyah (debug, choose flavor)",
      "request": "launch",
      "type": "dart",
      "args": ["--flavor", "${input:flavor}"]
    },
    {
      "name": "ruqayyah (profile, choose flavor)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "args": ["--flavor", "${input:flavor}"]
    },
    {
      "name": "ruqayyah (release, choose flavor)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": ["--flavor", "${input:flavor}"]
    }
  ],
  "inputs": [
    {
      "id": "flavor",
      "type": "pickString",
      "description": "Select a build flavor",
      "options": ["dev", "prod"],
      "default": "dev"
    }
  ]
}
